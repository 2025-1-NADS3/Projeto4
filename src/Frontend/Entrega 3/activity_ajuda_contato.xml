<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#C6EAFF">

    <!-- TOPO -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#63D471"
        android:orientation="horizontal"
        android:padding="12dp">


        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/btnNotificacao"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/sininho"
            android:contentDescription="Notificações"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <!-- CONTEÚDO COM SCROLL -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- AJUDA -->

            <LinearLayout
                android:id="@+id/btnAjudaContato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Ícone de ajuda"
                    android:src="@drawable/luz" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="AJUDA"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000" />

            <!-- CONTATO -->

            <LinearLayout
                android:id="@+id/btnContato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Ícone de contato"
                    android:src="@drawable/cel" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="CONTATO"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000" />
        </LinearLayout>
    </ScrollView>

    <!-- RODAPÉ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#63D471">

        <ImageView
            android:id="@+id/bntSaiir"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/saiir"
            android:contentDescription="Sair"
            android:layout_marginHorizontal="8dp"
            android:clickable="true"
            android:focusable="true"/>

        <ImageView
            android:id="@+id/btnQrCode"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/qrcode"
            android:contentDescription="QR Code"
            android:layout_marginHorizontal="8dp"
            android:clickable="true"
            android:focusable="true"/>


        <ImageView
            android:id="@+id/btnHome"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="8dp"
            android:contentDescription="Home"
            android:src="@drawable/casinhahome" />

        <ImageView
            android:id="@+id/btnextrato"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/compr"
            android:contentDescription="Compras"
            android:layout_marginHorizontal="8dp"
            android:clickable="true"
            android:focusable="true"/>

        <ImageView
            android:id="@+id/btnperfil"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="8dp"
            android:clickable="true"
            android:contentDescription="Perfil"
            android:focusable="true"
            android:src="@drawable/pessoacir" />

    </LinearLayout>
</LinearLayout>
